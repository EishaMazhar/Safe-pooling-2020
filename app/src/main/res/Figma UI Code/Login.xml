<!-- Login/Signup -->
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/login_signu"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:clipToOutline="true"
android:background="@drawable/login_signu"
 />


<!-- drawable/login_signu.xml -->
<vector
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:aapt="http://schemas.android.com/aapt"
android:width="375dp"
android:height="667dp"
android:viewportWidth="375"
android:viewportHeight="667"
 >

<group>

<clip-path
android:pathData="M0 0H375V667H0V0Z"
/>

<path
android:pathData="M0 0V667H375V0"
android:fillColor="#FFFFFF"
/>

</group>

</vector>



<!-- image -->
<View
android:id="@+id/image"
android:layout_width="3dp"
android:layout_height="7dp"
android:background="@drawable/image"
 />


<!-- drawable/image.xml -->
<vector
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:aapt="http://schemas.android.com/aapt"
android:width="3dp"
android:height="7dp"
android:viewportWidth="3"
android:viewportHeight="7"
 >

<group>

<clip-path
android:pathData="M0 0H3V7H0V0Z"
/>

</group>

</vector>